#!/usr/bin/env bash

Xephyr :22 -screen 7016x4961 &
XEPHYR=$!

sleep 1

DISPLAY=:22 ../../sent presentation &
SENT=$!

num=`cat presentation | grep -E "^$" | wc -l`
let num=num+1

mkdir screens
cd screens

sleep 3

for i in `seq -w 00 $num`; do
    DISPLAY=:22 import -window root -quality 100 screen$i.jpg
    DISPLAY=:22 xdotool key space
    sleep 0.5
done

kill $SENT
kill $XEPHYR
